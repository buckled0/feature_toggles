<p id="notice"><%= notice %></p>

<h1>Feature Toggles</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Toggle status</th>
      <th>Toggle percentage</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @feature_toggles.each do |feature_toggle| %>
      <tr>
        <td><%= feature_toggle.name %></td>
        <td><%= feature_toggle.toggle_status %></td>
        <td><%= feature_toggle.toggle_percentage %></td>
        <td><%= link_to 'Show', feature_toggle %></td>
        <td><%= link_to 'Edit', edit_feature_toggle_path(feature_toggle) %></td>
        <td><%= link_to 'Destroy', feature_toggle, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Feature Toggle', new_feature_toggle_path %>
